@model List<Application.ViewModels.ProductViewModel>
@{
    ViewData["Title"] = "Products";
}

<div class="text-center">
    <h1 class="display-4">Welcome to my world</h1>
</div>

<div class="container-fluid">
    <div class="row mb-3">
        <div class="col-3 offset-9">
            <a asp-controller="Product" asp-action="Create" class="btn btn-sm btn-outline-secondary">Agregar</a>
        </div>
    </div>
    <div class="row">

        @if (Model == null || Model.Count == 0)
        {

            <h2>No hay productos para agregar</h2>
        }

        else
        {
            @foreach (Application.ViewModels.ProductViewModel item in Model)

            {
                <div class="col-4">
                    <div class="card shadow-sm">

                        <img class="bd-placeholder-img card-img-top" src="@item.ImageUrl"></img>

                        <div class="card-body">
                            <h4>@item.Name</h4>
                            <p class="card-text"> @item.Description</p>

                            <div class="d-flex justify-content-between align-items-center">
                                
                                <div class="btn-group">
                                    <a asp-controller="Product" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Editar</a>
                                    <a asp-controller="Product" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Eliminar</a>
                                </div>

                                <small class="text-body-secondary" @item.Price></small>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }



    </div>


</div>
