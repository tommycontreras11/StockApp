@model List<Application.ViewModels.ProductViewModel>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to my world</h1>
</div>

<div class="container-fluid">

    <div class="row">

        @if (Model == null || Model.Count == 0)
        {

            <h2>No hay productos para agregar</h2>
        }

        else {
            @foreach (Application.ViewModels.ProductViewModel item in Model)

            {
                <div class="col-4">
                    <div class="card shadow-sm">
                       
                        <img class="bd-placeholder-img card-img-top" src="@item.ImageUrl"></img>
                       
                        <div class="card-body">
                            <h4>@item.Name</h4>
                            <p class="card-text"> @item.Description</p>

                            <div class="d-flex justify-content-between align-items-center">
                   
                                <small class="text-body-secondary" @item.Price></small>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }

 

    </div>
     

</div>
